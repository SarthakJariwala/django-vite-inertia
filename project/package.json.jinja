    "class-variance-authority": "^0.7.1",
    "tw-animate-css": "^1.4.0",
    {% elif starter_kit and frontend == 'svelte' %}
    "tailwind-variants": "^1.0.0",
    "tw-animate-css": "^1.4.0",
    {% endif %}
    "vite": "^6.0.6"
  }
}
